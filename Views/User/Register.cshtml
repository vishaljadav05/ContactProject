@using ContactProject.Repositories
@model t_User
@{
    ViewData["Title"] = "Register";
}


<div class="container mt-5" style="border: 1px solid #ccc; width: 70%; padding: 20px">
    <h3>Register</h3>
    
    <form enctype="multipart/form-data" asp-controller="User" asp-action="Register" method="post">
        
        <div class="mt-3">
            <label class="control-label mt-1" for="name">Name:</label>
            <div class="mt-1">
                <input type="text" class="form-control" asp-for="c_UserName" id="name" placeholder="Enter name">
            </div>
            <span class="text-danger" asp-validation-for="c_UserName"></span>
        </div>

        <div class="mt-3">
            <label class="control-label mt-1" for="email">Email:</label>
            <div class="mt-1">
                <input type="email" class="form-control" asp-for="c_Email" id="email" placeholder="Enter email">
            </div>
            <span class="text-danger" asp-validation-for="c_Email"></span>
        </div>

        <div class="mt-3">
            <label class="control-label mt-1" for="pwd">Password:</label>
            <div class="mt-1">
                <input type="password" class="form-control" asp-for="c_Password" id="pwd" placeholder="Enter password">
            </div>
            <span class="text-danger" asp-validation-for="c_Password"></span>
        </div>

        <div class="mt-3">
            <label class="control-label mt-1" for="conpwd">Confirm Password:</label>
            <div class="mt-1">
                <input type="password" class="form-control" asp-for="c_ConfirmPassword" id="conpwd" placeholder="Enter password">
            </div>
            <span class="text-danger" asp-validation-for="c_ConfirmPassword"></span>
        </div>

        <div class="mt-3">
            <label class="control-label mt-1" for="address">Address:</label>
            <div class="mt-1">
                <input type="text" class="form-control" asp-for="c_Address" id="address" placeholder="Enter address">
            </div>
        </div>

        <div class="mt-3">
            <label class="control-label mt-1" for="mobile">Mobile:</label>
            <div class="mt-1">
                <input type="text" class="form-control" asp-for="c_Mobile" id="mobile" placeholder="Enter mobile">
            </div>
        </div>

        <div class="mt-3">
            <label class="control-label mt-1">Gender:</label>
            <div class="mt-1">
                <input type="radio" id="gender1" asp-for="c_Gender" value="Male"> Male
                <input type="radio" id="gender2" asp-for="c_Gender" value="Female"> Female
                <input type="radio" id="gender3" asp-for="c_Gender" value="Other"> Other
            </div>
        </div>

        <div class="mt-3">
            <label class="control-label mt-1" for="image">Image:</label>
            <div class="mt-1">
                <input type="file" class="form-control" asp-for="ProfilePicture" id="Image">
            </div>
            <span class="text-danger" asp-validation-for="ProfilePicture"></span>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div id="responseMessage" class="mt-3">
            @ViewData["Message"]
        </div>

        <div class="mt-3">
            <div class="mt-1">
                <button type="submit" class="btn btn-primary" id="register">Register</button>
            </div>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}






































