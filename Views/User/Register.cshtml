@using ContactProject.Repositories
@model t_User
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<div class="container">
    <form asp-controller="User" asp-action="Register" method="post">
        <div class="modal-body">
            <div class="mt-3">
                <label class="control-label mt-1" asp-for="c_UserName">UserName</label>
                <input asp-for="c_UserName" class="form-control" required placeholder="Enter UserName" />
                <span asp-validation-for="c_UserName" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <label class="control-label mt-1" asp-for="c_Email">Email</label>
                <input asp-for="c_Email" type="c_Email" class="form-control" required placeholder="Enter Email" />
                <span asp-validation-for="c_Email" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <label class="control-label mt-1" asp-for="c_Password">Password</label>
                <input asp-for="c_Password" type="c_Password" class="form-control" required
                    placeholder="Enter Password" />
                <span asp-validation-for="c_Password" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <label class="control-label mt-1" asp-for="c_Address">Address</label>
                <input asp-for="c_Address" class="form-control" placeholder="Enter Address" />
            </div>

            <div class="mt-3">
                <label class="control-label mt-1" asp-for="c_Mobile">Mobile</label>
                <input asp-for="c_Mobile" class="form-control" placeholder="Enter Mobile number" />
            </div>

            <div class="mt-3">
                <label class="control-label mt-1" asp-for="c_Gender">Gender</label>
                <input asp-for="c_Gender" class="form-control" placeholder="Enter Gender" />
            </div>

            <div class="mt-3">
                <label class="control-label mt-1" asp-for="c_Image">Image</label>
                <input asp-for="c_Image" class="form-control" placeholder="Enter Image URL or Name" />
            </div>

        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}