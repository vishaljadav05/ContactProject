@model ContactProject.Models.t_Contact

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="c_ContactId" />

    <label>Name</label>
    <input type="text" asp-for="c_ContactName" class="form-control" />

    <label>Email</label>
    <input type="email" asp-for="c_Email" class="form-control" />

    <label>Group</label>
    <input type="text" asp-for="c_Group" class="form-control" />

    <label>Address</label>
    <input type="text" asp-for="c_Address" class="form-control" />

    <label>Mobile</label>
    <input type="text" asp-for="c_Mobile" class="form-control" />

    <label>Status</label>
    <input type="text" asp-for="c_Status" class="form-control" />

    <button type="submit" class="btn btn-primary">Save</button>
</form>
